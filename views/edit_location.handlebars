<div class='container'>
    <h3>Add new location</h3>

    <h4>{{this.confirm_text}}</h4>
    <form id="insertForm" action="/edit_location" method="POST">

        <input type="hidden" name="locationID" value={{location.locationID}} id="locationID"}>

        <div class='form-row'>
            <div class='form-group col'>
                <label for="name">Name:</label>
                <input class='form-control col' type="text" name="name" placeholder="Location Name" id="name"
                    value={{location.name}} required>
            </div>
            <div class='form-group col'>
                <label for="countryID">Country:</label>
                <select class='form-control' name="countryID" id="countryID" required>
                    <option value="">--Please choose an option--</option>
                    {{#each countryList}}
                        <option value={{this.countryID}}>{{this.countryName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <br>
        <div class='form-row'>
            <div class='form-group col'>
                <label for="city">City:</label>
                <input class='form-control' type="text" name="city" id="city" value={{location.city}} required="required">
            </div>
            <div class='form-group col'>
                <label for="streetAddress">Street Address:</label>
                <input class='form-control' type="text" name="streetAddress" value={{location.streetAddress}} id="streetAddress"
                    placeholder="123 Green St" required="required">
            </div>
        </div>
        <input class='btn btn-primary' type="submit" value="Edit Location" id="edit_location_button">
    </form>
    <form action="/location">
        <input class=' btn btn-link' type="submit" value="Cancel" id="cancel_button" style="float:left;">
    </form>
</div>