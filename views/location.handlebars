<div class='container'>
   
    <table class='editLocationTable'>
        <tr>
            <th>Location Name</th>
            <th>City</th>
            <th>Street Address</th>
        </tr>
        {{#each locationList}}
            <tr>
                <td id='location{{this.locationID}}'>{{this.name}}</td>
                <td>{{this.city}}</td>
                <td>{{this.streetAddress}}</td>
                <td><button id="editButton{{this.locationID}}" class='btn btn-primary'>Edit</button></td>
                <td><form action="/location" method="POST"><input type="hidden" name="locationID" value={{this.locationID}} id="locationID"}><button class="btn btn-link" style="float:left;">Delete</button></form></td>
            </tr>
        {{/each}}
    </table>

    <form action="/add_entry" style='float:left;'>
        <button class='btn btn-link'>Cancel</button>
    </form>
</div>