<div id='form-container' class='container'>
    <h3 style="display:flex;">Add a new entry here!</h3>

    {{this.confirm_text}}
    <form id="insertForm" action='/add_entry' method="POST">
        <input type="hidden" name="userID" value=1 id="userID">

        <div class='form-row'>

            <div class='form-group col'>
                <label for="title">Title</label>
                <input class='form-control' type="text" name="title" placeholder="Entry Title" id="title"
                    required="required">
            </div>
            <br>

            <div class='form-group col'>
                <label for="DOE">Date of Entry</label>
                <input class='form-control' type="date" name="DOE" placeholder="yyyy-mm-dd" id="DOE"
                    required="required">
            </div>
            <br>

            <div class='form-group col'>
                <label for="timeOfDay">Time of Entry</label>
                <input class='form-control' type="time" name="timeOfDay" id="timeOfDay" required="required">
            </div>
            <br>
        </div>
        <div class='form-row'>
            <div class='form-group col'>
                <label for="locationID">Location</label>
                <select class='form-control' name="locationID" id="locationID">
                    <option value="">--Please choose an option--</option>
                    {{#each locationList}}
                    <option value={{this.locationID}}>{{this.name}}</option>
                    {{/each}}
                </select>
                <div>
                    <button class="btn btn-link" href='/add_location' style="float:left;">Add Location</button>
                    <button class="btn btn-link" href='/edit_location' style="float:left;">Edit Location</button>
                </div>
            </div>
            <br>
            <div class='form-group col'>
                <label for="categoryID">Category</label>
                <select class='form-control' name="categoryID" id="categoryID">
                    <option value="">--Please choose an option--</option>
                    {{#each categoryList}}
                    <option value={{this.categoryID}}>{{this.categoryName}}</option>
                    {{/each}}
                </select>
                <div>
                    <button class="btn btn-link" href='/add_category' style="float:left;">Add Category</button>
                    <button class=" btn btn-link" href='/edit_category' style="float:left;">Edit Category</button>
                </div>
            </div>
            <div class='form-group'>
                <label for="groupSize">Group Size</label>
                <input class='form-control' type="number" name="groupSize" id="groupSize">
            </div>
            <br>
        </div>
        <div class='form-row'>
            <div class='form-group col'>
                <label for="comments">Comments</label>
                <br>
                <textarea class='form-control' name="comments" id="comments" cols="30" rows="10"
                    placeholder="Enter comments here"></textarea>
            </div>
            <br>
            <div class='form-group col'>
                <label for="review">Review</label>
                <br>
                <textarea class='form-control' name="review" id="review" cols="30" rows="10"
                    placeholder="Enter a review here"></textarea>
            </div>
            <br>
        </div>
        <input class=' btn btn-primary' type="submit" value="Add Entry" id="add_entry_button" style="float:left;">
        <button class='btn btn-link' href='/' style="float:left;">Cancel</button>
</div>