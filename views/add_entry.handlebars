<h1>Add a new entry here!</h1>

{{!-- TODO: Post new entries --}}
<form id="insertForm" action=>
    <label for="title">Title:</label>
    <input type="text" name="title" placeholder="Entry Title" id="title" required="required">
    
    <br>
    <label for="dateOfEvent">Date of Entry:</label>
    <input type="date" name="dateOfEvent" placeholder="yyyy-mm-dd" id="dateOfEvent" required="required">

    <br>
    <label for="timeOfEntry">Time of Entry:</label>
    <input type="time" name="timeOfEntry" id="timeOfEntry" required="required">

    <br>
    <label for="location">Location:</label>
    <select name="location" id="location">
        <option value="">--Please choose an option--</option>
        {{#each locationList}}
            <option value={{this.locationID}}>{{this.name}}</option>
        {{/each}}
    </select>

    <br>
    <label for="category">Category:</label>
    <select name="category" id="category">
        <option value="">--Please choose an option--</option>
        <option value="restaurant">Restaurant</option>
        <option value="bar">Bar</option>
        <option value="attraction">Attraction</option>
        <option value="monument">Monument</option>
        <option value="festival">Festival</option>
    </select>

    <br>
    <label for="comments">Comments:</label>
    <br>
    <textarea name="comments" id="comments" cols="30" rows="10" placeholder="Enter comments here"></textarea>

    <br>
    <label for="review">Review:</label>
    <br>
    <textarea name="review" id="review" cols="30" rows="10" placeholder="Enter a review here"></textarea>

    <br>
    <label for="groupSize">Group Size:</label>
    <input type="number" name="groupSize" id="groupSize">
    
    <br>
    <input type="submit" value="Add Entry" id="add_entry_button">
</form>

<form action="/add_location">
    <button>Add Location</button>
</form>

<form action="/edit_location">
    <button>Edit Location</button>
</form>

<form action="/add_category">
    <button>Add Category</button>
</form>

<form action="/edit_category">
    <button>Edit Category</button>
</form>

<form action="/">
    <button>Cancel</button>
</form>
